<!DOCTYPE html>
<html>
  <head>
    <title>GuesthouseApp</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body>
    <header>
      <%= link_to root_path, style: "text-decoration: none;" do %>
        <h1>Pousadaria</h1>
      <% end %>
      <nav>
        <% if user_signed_in? %>
          <%= current_user.email %>
          <%= button_to 'Sair', destroy_user_session_path, method: :delete %>
        <% else %>
          <%= link_to 'Cadastrar como Dono de Pousada', new_user_registration_path(role: 'owner') %> |
          <%= link_to 'Cadastrar como Visitante', new_user_registration_path(role: 'visitor')%> |
          <%= link_to 'Entrar', new_user_session_path %>
        <% end %>
      </nav>
    </header>
    <main>
      <div>
        <p class="notice"><%= notice %></p>
        <p class="alert"><%= alert %></p>
      </div>
      <%= yield %>
    </main>
  </body>
</html>
