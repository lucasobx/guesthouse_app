<%= form_for [@guesthouse, @room, @period_price] do |f| %>
  <div>
    <%= f.label :start_date, 'Data de Início' %>
    <%= f.date_field :start_date %>
  </div>

  <div>
    <%= f.label :end_date, 'Data de Fim' %>
    <%= f.date_field :end_date %>
  </div>

  <div>
    <%= f.label :daily_rate, 'Preço Diário' %>
    <%= f.number_field :daily_rate %>
  </div>

  <div>
    <%= f.submit 'Salvar Preço por Período' %>
  </div>
<% end %>