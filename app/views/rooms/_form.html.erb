<%= form_for [@guesthouse, @room] do |f| %>
  <div>
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>

  <div>
    <%= f.label :description %>
    <%= f.text_area :description %>
  </div>

  <div>
    <%= f.label :size %>
    <%= f.number_field :size %>
  </div>

  <div>
    <%= f.label :max_capacity %>
    <%= f.number_field :max_capacity %>
  </div>

  <div>
    <%= f.label :daily_rate %>
    <%= f.number_field :daily_rate %>
  </div>

  <div>
    <%= f.label :bathroom %>
    <%= f.check_box :bathroom %>
  </div>

  <div>
    <%= f.label :balcony %>
    <%= f.check_box :balcony %>
  </div>

  <div>
    <%= f.label :air_conditioning %>
    <%= f.check_box :air_conditioning %>
  </div>

  <div>
    <%= f.label :tv %>
    <%= f.check_box :tv %>
  </div>

  <div>
    <%= f.label :closet %>
    <%= f.check_box :closet %>
  </div>

  <div>
    <%= f.label :safe %>
    <%= f.check_box :safe %>
  </div>

  <div>
    <%= f.label :accessibility %>
    <%= f.check_box :accessibility %>
  </div>

  <div>
    <%= f.label :status %>
    <%= f.check_box :status %>
  </div>

  <div>
    <%= f.submit %>
  </div>
<% end %>